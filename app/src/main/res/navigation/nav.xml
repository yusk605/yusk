<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.questionbook.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_workBookFragment"
            app:destination="@id/workBookFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_createQuestionragment"
            app:destination="@id/createQuestionragment" />
    </fragment>
    <fragment
        android:id="@+id/workBookFragment"
        android:name="com.example.questionbook.WorkBookFragment"
        android:label="fragment_work_book"
        tools:layout="@layout/fragment_work_book" >
        <action
            android:id="@+id/action_workBookFragment_to_gameStartFragment"
            app:destination="@id/gameStartFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameStartFragment"
        android:name="com.example.questionbook.GameStartFragment"
        android:label="fragment_game_start"
        tools:layout="@layout/fragment_game_start" >
        <action
            android:id="@+id/action_gameStartFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
    </fragment>
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.example.questionbook.AnswerFragment"
        android:label="fragment_answer"
        tools:layout="@layout/fragment_answer" />
    <fragment
        android:id="@+id/createQuestionragment"
        android:name="com.example.questionbook.CreateQuestionragment"
        android:label="fragment_create_questionragment"
        tools:layout="@layout/fragment_create_questionragment" />
</navigation>