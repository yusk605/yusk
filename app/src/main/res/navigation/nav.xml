<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/holderFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.questionbook.fragment.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_workBookFragment"
            app:destination="@id/workBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/workBookFragment"
        android:name="com.example.questionbook.fragment.WorkBookFragment"
        android:label="fragment_work_book"
        tools:layout="@layout/fragment_work_book" >
        <action
            android:id="@+id/action_workBookFragment_to_gameStartFragment"
            app:destination="@id/gameStartFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameStartFragment"
        android:name="com.example.questionbook.fragment.GameStartFragment"
        android:label="fragment_game_start"
        tools:layout="@layout/fragment_game_start" >
        <action
            android:id="@+id/action_gameStartFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
    </fragment>
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.example.questionbook.fragment.AnswerFragment"
        android:label="fragment_answer"
        tools:layout="@layout/fragment_answer" />
    <fragment
        android:id="@+id/holderFragment"
        android:name="com.example.questionbook.fragment.HolderFragment"
        android:label="fragment_question_book_holder"
        tools:layout="@layout/fragment_holder" >
        <action
            android:id="@+id/action_questionBookHolderFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/laboratoryFragment"
        android:name="com.example.questionbook.fragment.LaboratoryFragment"
        android:label="fragment_laboratory"
        tools:layout="@layout/fragment_laboratory" />
</navigation>